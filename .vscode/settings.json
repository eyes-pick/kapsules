{
  "terminal.integrated.localEchoEnabled": "auto",
  "terminal.integrated.localEchoLatencyThreshold": 30,
  "terminal.integrated.enableMultiLinePasteWarning": "auto",

  // Configure terminal links to open in Simple Browser
  "terminal.integrated.enableLinks": true,

  // Set Simple Browser as default for local development URLs
  "workbench.externalUriOpeners": {
    "http://localhost*": "vscode.simple-browser",
    "http://127.0.0.1*": "vscode.simple-browser",
    "https://localhost*": "vscode.simple-browser",
    "https://127.0.0.1*": "vscode.simple-browser"
  },

  // Simple Browser configuration
  "simpleBrowser.focusLockIndicator.enabled": true,

  // Configure which links should open in Simple Browser vs external
  "workbench.trustedDomains": ["localhost", "127.0.0.1"],

  // Enhanced terminal experience
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 14,

  // Auto-save for better development experience
  "files.autoSave": "onFocusChange",

  // Format on save for code quality
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}
